# Server Configuration
PORT=3000
NODE_ENV=production

# Target GPS Server
TARGET_SERVER=https://gps-server-zq8o.onrender.com

# Logging
LOG_REQUESTS=true

# Security
ALLOWED_IPS=  # Comma-separated IPs (empty = allow all)
BLOCKED_IPS=  # Comma-separated IPs to block

# Performance
REQUEST_TIMEOUT=30000  # 30 seconds
MAX_BODY_SIZE=10485760 # 10MB
ENABLE_CACHE=true
CACHE_DURATION=60000   # 1 minute cache
